global
    # HAproxy configuration options

defaults
    # HAproxy defaults configuration options

frontend https_frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.genyarko.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    mode http
    default_backend app_backend

backend app_backend
    mode http
    balance roundrobin
    option forwardfor
    http-request set-header X-Forwarded-Port %[dst_port]
    http-request add-header X-Forwarded-Proto https if { ssl_fc }
    server web-01 100.24.206.17:80 check
    server web-02 54.173.234.218:80 check
